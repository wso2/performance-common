<assembly>
    <includeBaseDirectory>false</includeBaseDirectory>
    <id>performance-common</id>
    <formats>
        <format>tar.gz</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>scripts</directory>
            <outputDirectory>.</outputDirectory>
            <filtered>true</filtered>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>netty-service</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <useStrictFiltering>true</useStrictFiltering>
            <includes>
                <include>org.wso2.performance:netty-http-echo-service</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>payloads</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <useStrictFiltering>true</useStrictFiltering>
            <includes>
                <include>org.wso2.performance:payload-generator</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>jtl-splitter</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <useStrictFiltering>true</useStrictFiltering>
            <includes>
                <include>org.wso2.performance:jtl-splitter</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
